    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:src="@drawable/game_background"
        android:scaleType="fitXY" />
    <TextView
        android:id="@+id/txt_finally_score"
